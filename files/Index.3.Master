<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Index.master.cs" Inherits="CompanyWebAplication.Index" %>

<!DOCTYPE html>

<html lang="en">
<head runat="server">
    <title></title>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
    <link href="Content/Global.css" rel="stylesheet" />
    <script src="Scripts/jquery-3.3.1.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script src="Scripts/popper.min.js"></script>
    <link href="Assets/FontAwesome/css/fontawesome-all.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function ()
        {

            $("#loginModal").on('shown.bs.modal', function ()
            {

                $(this).find('#email').focus();

            });

            unStickMobileFooter();
        });

        function unStickMobileFooter()
        {
            var isMobile = detectmob();

            if (isMobile)
            {
                var footer = document.getElementById('footer');
                footer.classList.remove('fixed-bottom');
            }
        }

        function detectmob()
        {
             if( navigator.userAgent.match(/Android/i)
             || navigator.userAgent.match(/webOS/i)
             || navigator.userAgent.match(/iPhone/i)
             || navigator.userAgent.match(/iPad/i)
             || navigator.userAgent.match(/iPod/i)
             || navigator.userAgent.match(/BlackBerry/i)
             || navigator.userAgent.match(/Windows Phone/i)
             )
             {
                return true;
             }
             else
             {
                return false;
             }
        }

        // When the user scrolls the page, execute myFunction
        window.onscroll = function() {unstickHeader()};

        // Get the header
        var header = document.getElementById("header");

        // Get the offset position of the navbar
        var sticky = header.offsetTop;

        // Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
        function unstickHeader() {
          if (window.pageYOffset >= sticky) {
            header.classList.add("sticky");
          } else {
            header.classList.remove("sticky");
          }
        } 
        
    </script>

    <style>
        *
        {
            font-family:'Century Gothic';
        }

        .carousel-inner img
        {
            width:100%;
            height:100%;
        }

    </style>
</head>

<body>
    <div class="container-fluid bg-dark" style="height:10px;"></div>
    <div class="container-fluid">
        <!--Header start-->
