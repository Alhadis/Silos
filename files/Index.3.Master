              </div>

            </div>
          </div>
        </div>
        <!--Login Modal End-->
        
        <!-- #region Test -->
        <!--Register user Modal Start-->
        <div class="modal multi-step" id="registrationModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title step-1" data-step="1">Account details</h4>
                        <h4 class="modal-title step-2" data-step="2">Personal information</h4>
                        <h4 class="modal-title step-3" data-step="3">Where do you live?</h4>
                        <h4 class="modal-title step-4" data-step="4">Contact information</h4>
                        <h4 class="modal-title step-5" data-step="5">Verification</h4>
                        <h4 class="modal-title step-6" data-step="6">Terms and conditions</h4>
                        <h4 class="modal-title step-7" data-step="7">Success</h4>
                        <div class="m-progress">
                            <div class="m-progress-bar-wrapper">
                                <div class="m-progress-bar">
                                </div>
                            </div>
                            <div class="m-progress-stats">
                                <span class="m-progress-current">
                                </span>
                                <span class="m-progress-total">
                                </span>
                            </div>
                            <div class="m-progress-complete">
                                Completed
                            </div>
                        </div>
                    </div>
                    <div class="modal-body step-1" data-step="1" runat="server">
                        <div class="form-group">
                            <input type="email" class="form-control" id="txtRegisterEmail" placeholder="Email" onkeyup="checkInput()" runat="server"/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtLoginID_Username" placeholder="Set a username" runat="server"/>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="txtPassword" placeholder="Set a password" runat="server"/> 
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Re-enter the password" runat="server"/> 
                        </div>
                    </div>
                    <div class="modal-body step-2" data-step="2">
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtFirstName" placeholder="First name" runat="server"/> 
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtMiddleName" placeholder="Middle name" runat="server"/> 
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtLastName" placeholder="Last name" runat="server"/>
                        </div>
                        <div class="form-group">
                            <select class="form-control" ID="ddlGender" runat="server">
                                <option hidden selected>Select gender</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>  
                    </div>
                    <div class="modal-body step-3" data-step="3">
                        <div class="row">
                            <div class="m-3 p-1">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtHouseNumber" placeholder="Flat/House no." runat="server"/> 
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="txtCity" placeholder="City" runat="server"/> 
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control" id="txtZipcode" placeholder="Zip code" runat="server"/>
                                </div>
                                <div class="form-group">
