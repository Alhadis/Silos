################
# COLOR SCHEME #
################

###

set $bg            #2F343F
set $active-bg     #A9A9A9
set $inactive-bg   #2F343F
set $text          #2F343F
set $inactive-text #555E71
set $urgent-bg     #E53935

# window colors
#Class                  border       background   text           indicator
client.focused          $active-bg   $active-bg   $text          #00ff00
client.unfocused        $inactive-bg $inactive-bg $inactive-text #00ff00
client.focused_inactive $inactive-bg $inactive-bg $inactive-text #00ff00
client.urgent           $urgent-bg   $urgent-bg   $text          #00ff00

##############
### i3 Bar ###
##############

bar {
        position top
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	strip_workspace_numbers no
	colors {
        	background $bg
        	separator $bg
        	#                  border       background   text
        	focused_workspace  $bg          $bg          $active-bg
        	active_workspace   $bg          $bg          #FF0000
        	inactive_workspace $inactive-bg $inactive-bg $inactive-text
        	urgent_workspace   $urgent-bg   $urgent-bg   $inactive-text
        	}
}

###########
